{
	"compilerOptions": {
		"types": ["bun-types"],
		"lib": ["esnext"],
		"module": "esnext",
		"target": "esnext",
		"outDir": "./dist",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"noErrorTruncation": true,
		"allowJs": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"exclude": ["node_modules"],
	"include": ["src", "tests"]
}
